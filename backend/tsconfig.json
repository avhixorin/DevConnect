{
  "compilerOptions": {
    "target": "ES2020",                         
    "module": "CommonJS",                       
    "rootDir": "src",                           
    "outDir": "dist",                           
    "strict": true,                             
    "noImplicitAny": true,                      
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true,                       
    "resolveJsonModule": true,                  
    "strictPropertyInitialization": false       
  },
  "include": ["src"],                           
  "exclude": ["node_modules", "dist"]           
}
